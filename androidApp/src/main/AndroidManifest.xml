<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="at.jodlidev.esmira">

    <uses-feature android:required="false" android:name="android.hardware.camera" />
    <uses-feature android:required="false" android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.INTERNET"/><!--for synchronisation-->
    <uses-permission android:name="android.permission.CAMERA" /><!--For QR scanner-->
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/><!--For alarm manager-->
    <!--	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>&lt;!&ndash;For uploading screenshots&ndash;&gt;-->

    <uses-permission android:name="com.huawei.permission.external_app_settings.USE_COMPONENT"/><!--To open Huawei settings-screen-->
    <uses-permission android:name="oppo.permission.OPPO_COMPONENT_SAFE"/><!--To open Oppo settings-screen-->

    <application
        android:name="at.jodlidev.esmira.Application_main"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name="at.jodlidev.esmira.Activity_main"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name="at.jodlidev.esmira.Activity_addStudy"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/add_a_study">
        </activity>
        <activity
            android:name="at.jodlidev.esmira.Activity_QRscanner"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name="at.jodlidev.esmira.Activity_WelcomeScreen"
            android:theme="@style/AppTheme.ActivityWelcome"
            android:label="@string/app_name"
            android:excludeFromRecents="true">
        </activity>

        <activity
            android:name="at.jodlidev.esmira.Activity_notificationsBroken"
            android:theme="@style/AppTheme.WideDialog"
            android:label="@string/problems_with_notifications"
            android:excludeFromRecents="true">
        </activity>
        <activity
            android:name="at.jodlidev.esmira.Activity_editSchedules"
            android:theme="@style/AppTheme.ActivityDialog"
            android:label="@string/change_schedules"
            android:excludeFromRecents="true">
        </activity>
        <activity
            android:name="at.jodlidev.esmira.Activity_dialog"
            android:theme="@style/AppTheme.ActivityDialog"
            android:label="@string/app_name"
            android:excludeFromRecents="true">
        </activity>
        <activity
            android:name="at.jodlidev.esmira.Activity_errorReport"
            android:theme="@style/AppTheme.WideDialog"
            android:label="@string/send_error_report"
            android:excludeFromRecents="true">
        </activity>
        <!--		<activity-->
        <!--			android:name="at.jodlidev.esmira.Activity_uploadScreenshots"-->
        <!--			android:theme="@style/AppTheme.ErrorReportDialog"-->
        <!--			android:label="@string/upload_screenshots"-->
        <!--			android:excludeFromRecents="true">-->
        <!--		</activity>-->

        <activity
            android:name="at.jodlidev.esmira.Activity_LinkInterpreter"
            android:theme="@style/AppTheme.Transparent"
            android:label="@string/add_a_study"
            android:excludeFromRecents="true">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="esmira"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:scheme="https"
                    android:host="esmira.kl.ac.at"/>
            </intent-filter>
        </activity>


        <receiver android:name="at.jodlidev.esmira.AlarmBox"/>

        <receiver android:name="at.jodlidev.esmira.RescheduleReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"/>
                <action android:name="android.intent.action.TIME_SET"/>
                <action android:name="android.intent.action.TIMEZONE_CHANGED"/>
            </intent-filter>
        </receiver>
    </application>

</manifest>