<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:padding="10dp">
	<ImageView
		android:id="@+id/icon"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:padding="10dp"
		android:src="@drawable/ic_bug_report_24dp"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintLeft_toLeftOf="parent"/>
	<TextView
		android:id="@+id/header"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/send_error_report"
		android:textSize="18sp"
		app:layout_constraintLeft_toRightOf="@id/icon"
		app:layout_constraintTop_toTopOf="parent"/>
	<TextView
		android:id="@+id/no_errors"
		android:visibility="gone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textStyle="bold"
		app:layout_constraintLeft_toRightOf="@id/icon"
		app:layout_constraintTop_toBottomOf="@id/header"
		android:text="@string/info_no_errors"/>
	<TextView
		android:id="@+id/warnings_num"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:textColor="@color/warn"
		android:textStyle="bold"
		app:layout_constraintLeft_toRightOf="@id/icon"
		app:layout_constraintTop_toBottomOf="@id/header"
		tools:text="999"/>
	<TextView
		android:id="@+id/label_warnings"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="5dp"
		android:paddingStart="5dp"
		android:textColor="@color/warn"
		android:textStyle="bold"
		app:layout_constraintLeft_toRightOf="@id/warnings_num"
		app:layout_constraintTop_toBottomOf="@id/header"
		android:text="warnings"/>
	<TextView
		android:id="@+id/errors_num"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="10dp"
		android:paddingStart="10dp"
		android:textColor="@color/error"
		android:textStyle="bold"
		app:layout_constraintLeft_toRightOf="@id/label_warnings"
		app:layout_constraintTop_toBottomOf="@id/header"
		tools:text="999"/>
	<TextView
		android:id="@+id/label_errors"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:paddingLeft="5dp"
		android:paddingStart="5dp"
		android:textColor="@color/error"
		android:textStyle="bold"
		app:layout_constraintLeft_toRightOf="@id/errors_num"
		app:layout_constraintTop_toBottomOf="@id/header"
		android:text="errors"/>
	
</androidx.constraintlayout.widget.ConstraintLayout>