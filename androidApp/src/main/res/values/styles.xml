<resources xmlns:tools="http://schemas.android.com/tools">
	
	<style name="AppTheme" parent="Theme.Material3.DayNight">
<!--
Change systemBar colors in Material3
Thanks to:
https://stackoverflow.com/questions/70060958/android-theming-set-status-bar-color-to-action-bar-color-in-material3
https://github.com/material-components/material-components-android/blob/master/docs/theming/Color.md#using-surface-colors
-->
		<item name="elevationOverlayEnabled">false</item>
		<item name="android:statusBarColor">@color/colorSurface</item>
		<item name="android:windowLightStatusBar" tools:targetApi="m">@bool/showLightSystemBars</item>
	</style>
	
	<style name="AppTheme.NoActionBar" parent="AppTheme">
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>
	<style name="AppTheme.ActivityDialog" parent="Theme.Material3.DayNight.Dialog.Alert">
	</style>
	<style name="AppTheme.PickerDialog" parent="Theme.Material3.DayNight.Dialog">
		<item name="colorAccent">@color/colorPrimaryDark</item>
	</style>
</resources>
