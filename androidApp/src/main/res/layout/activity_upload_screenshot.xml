<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:minHeight="300dp">
	
	<HorizontalScrollView
		android:layout_width="match_parent"
		android:layout_height="0dp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:layout_constraintBottom_toTopOf="@id/btn_add_image">
		<LinearLayout
			android:id="@+id/image_box"
			android:orientation="horizontal"
			android:layout_width="wrap_content"
			android:layout_height="match_parent"
			android:layout_gravity="center">
			
		</LinearLayout>
	</HorizontalScrollView>
	
	<ProgressBar
		android:visibility="gone"
		android:id="@+id/progress_el"
		style="?android:attr/progressBarStyleHorizontal"
		android:layout_width="0dp"
		android:layout_height="wrap_content"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/loading_el"
		app:layout_constraintBottom_toTopOf="@id/btn_add_image"/>
	<ProgressBar
		android:visibility="gone"
		android:id="@+id/loading_el"
		android:layout_width="wrap_content"
		android:layout_height="30dp"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintTop_toTopOf="@id/progress_el"
		app:layout_constraintBottom_toBottomOf="@id/progress_el"/>
	
	<Button
		style="@style/AppTheme.DefaultButton"
		android:id="@+id/btn_add_image"
		android:layout_width="wrap_content"
		android:layout_height="0dp"
		android:text="@string/add"
		android:drawableLeft="@drawable/ic_add_24dp"
		android:drawableStart="@drawable/ic_add_24dp"
		android:tint="@color/light_gray"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toTopOf="@id/btn_ok"/>
	
	<Button
		style="@style/AppTheme.DialogButton"
		android:id="@+id/btn_ok"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:text="@string/upload"
		app:layout_constraintRight_toRightOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"
		android:drawableEnd="@drawable/ic_check_accent_24dp"
		android:drawableRight="@drawable/ic_check_accent_24dp"
		app:drawableTint="@color/colorAccent"/>
	<Button
		style="@style/AppTheme.DialogButton"
		android:id="@+id/btn_cancel"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="10dp"
		android:text="@android:string/cancel"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>