<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:custom="http://schemas.android.com/apk/res-auto"
	android:orientation="horizontal"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingTop="20dp"
	android:paddingStart="20dp"
	android:paddingLeft="20dp"
	android:paddingEnd="20dp"
	android:paddingRight="20dp"
	android:gravity="center">
	
	<TextView
		android:id="@+id/label_header"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginEnd="5dp"
		android:layout_marginRight="5dp"
		tools:text="Schedule label:"
		android:textSize="16sp"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintTop_toTopOf="parent"/>
	<at.jodlidev.esmira.Element_DateTimeInput
		android:id="@+id/time_start"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		custom:dateTimeMode="time"
		app:layout_constraintLeft_toLeftOf="parent"
		app:layout_constraintRight_toLeftOf="@id/frequency_connector"
		app:layout_constraintTop_toBottomOf="@id/label_header"/>
	<TextView
		android:id="@+id/frequency_connector"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="5dp"
		android:layout_marginLeft="5dp"
		android:text="@string/word_and"
		app:layout_constraintLeft_toRightOf="@id/time_start"
		app:layout_constraintRight_toLeftOf="@id/time_end"
		app:layout_constraintTop_toTopOf="@id/time_start"
		app:layout_constraintBottom_toBottomOf="@id/time_start"/>
	<at.jodlidev.esmira.Element_DateTimeInput
		android:id="@+id/time_end"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="5dp"
		android:layout_marginLeft="5dp"
		custom:dateTimeMode="time"
		app:layout_constraintTop_toBottomOf="@id/label_header"
		app:layout_constraintLeft_toRightOf="@id/frequency_connector"
		app:layout_constraintRight_toRightOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>